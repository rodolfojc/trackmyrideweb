<!DOCTYPE html>
<html lang="en" class="">

  <%-include('layouts/login2_header'); -%>

  <head> 
    <meta charset = "utf-8" /> 
      
    <title> 
        Track My Ride
    </title> 
      
    <!-- add icon link -->
    <link rel = "icon" href =  
"https://user-images.githubusercontent.com/33750251/64987392-f9eead80-d8c0-11e9-84a9-e2a4a7f624db.png"
    type = "image/x-icon"> 
    
</head> 
 <body>
    
    <div class="section">
      <div class="map-route">
          <a href='/consult'><i class="material-icons">pin_drop</i><b></b>MAP</b></a>
      </div>
    <div class="login">
      <!-- <img class="logo" src="img/trackMyRidelogo2.JPG"> -->
      <p class="main-txt" style=" font-family:pacifico;
      color: white;
      font-size: 23px;

    
      margin-left: 45px;" >Track My Ride<i id="bike-icon" class="material-icons">directions_bike</i></p>
      <form action="login" method="POST">

        <input
          type="text"
          name="email"
          placeholder="Username (email)"
          required="required"          
        />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required="required"
        />
        <% if (locals.errors) { %>
          <p style="color: red;">Invalid Email or Password, try again!</p>
        <% }%>
        <button type="submit" class="btn btn-primary btn-block btn-large">
          LogIn
        </button>
        <span class="link-password" ><a  href="#">Forgotten your username or password?</a>
        <br />
        <br />
        <a href='/sign'>REGISTER</a></span>
      </form>
    </div>

    <%-include('layouts/login2_scripts'); -%>

  </body>
</html>

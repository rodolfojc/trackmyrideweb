
<!--Modal to update a bike -->
<!--Modal extracted from Bootstrap -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="" id="">UPDATE DETAILS</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

          <form name="update" id="update" action="/update" method="post">

          <div class="form-group">
              <div class="form-group">
               <input type="text" class="form-control" id="serial" name="serial" placeholder="SERIAL:" required>
                </div>
             </div>

             <div class="form-group">
              <div class="form-group">
               <input type="text" class="form-control" id="brand" name="brand" placeholder="BRAND:" required>
                </div>
             </div>

             <div class="form-group">
              <div class="form-group">
               <input type="text" class="form-control" id="color" name="color" placeholder="COLOR:" required>
                </div>
             </div>

             <div class="form-group">
              <div class="form-group">
               <input type="text" class="form-control" id="type" name="type" placeholder="TYPE:" required>
                </div>
             </div>

             <div class="form-group">
              <div class="form-group">
               
                  <label for="inlineFormInput">Status</label>
                  <select name="locker">
                    <option value="true">Owned</option>
                    <option value="false">Lost</option> </select
                  ><br />
                    <label for="inlineFormInput">Locker</label>
                    <select name="locker">
                      <option value="true">Yes</option>
                      <option value="false">No</option> </select
                    ><br />
                </div>
             </div>
          
          

        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
        <!-- To update user details-->
     
        <button id="updateBtn" type="button" class="btn btn-primary">UPDATE</button>
      </form>
      </div>
    </div>
  </div>
</div>


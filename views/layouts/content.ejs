<div class="container">
  
  <div id="midle-content-left">

    <form action="/addBike" method="POST">

       <div class="col-auto">

        <% for (var i =0; i< bike.length; i++) { %>
     
      <label class="sr-only" for="inlineFormInput" > Serial:   </label>
       <input
        type="text"
        class="form-control mb-2"
        name="serial"
        placeholder="Serial"
      />
      <input
        type="hidden"
        class="form-control mb-2"
        name=""
        value=""
      />
    </div>
    <div class="col-auto">
      <label class="sr-only" for="inlineFormInput">Brand</label>
      <input
        type="text"
        class="form-control mb-2"
        name="brand"
        placeholder="<%= bike[i].brand %>"
      />
    </div>
    <div class="col-auto">
      <label class="sr-only" for="inlineFormInput">Color</label>
      <input
        type="text"
        class="form-control mb-2"
        name="color"
        placeholder="<%= bike[i].color %>"
      />
    </div>
    <div class="col-auto">
      <label class="sr-only" for="inlineFormInput">Type</label>
      <input
        type="text"
        class="form-control mb-2"
        name="type"
        placeholder="<%= bike[i].type %>"
      />
    </div>
    <div class="col-auto">
      <label class="sr-only" for="inlineFormInput">Status</label>
      <input
        type="text"
        class="form-control mb-2"
        name="status"
        placeholder="<%= bike[i].status %>"
      />
    </div>
    <div class="col-auto">
      <label for="inlineFormInput">Locker</label>
      <select name="locker">
        <option value="true">Yes</option>
        <option value="false">No</option>
      </select>
    </div>
    <br />
    <div class="col-auto">
      
      <!-- <button id="btn2" name="post" foraction="/addbike" type="submit" class="btn btn-primary mb-2">
        Add new bike
      </button> -->
      <a class="update" href="/addbike">
        <button
          id="btn1"
          type="button"
          class="btn btn-primary mb-2s"
          data-toggle="modal"
          data-target="#myModal"
        >
          ADD NEW BIKE
        </button>
      </a>
    
      <a class="update" href="/put/<%= bike[i].id %>">
        <button
          id="btn1"
          type="button"
          class="btn btn-primary mb-2s"
          data-toggle="modal"
          data-target="#myModal"
        >
          UPDATE
        </button>
      </a>
    
    
  </div>
  
    </form>
    
  <% } %>
    
   
    </div>
    
  </div>
  
</div>

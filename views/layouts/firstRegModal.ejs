<!--This Modal will pop up when user wants to update a bike-->

<!--Modal Section-->
<%- locals.flash %>
<div class="container">
    <div class="parent-modal" id=<%= registredBefore===false? "hidden":"hidden" %>>
      <div class="modal-content">
        <div class="close">
          <a href="/welcomescreen2"> +</a>
        </div>
        <!--##########content  -->
        <form name='addbike2' action="/addBike" method="POST" enctype="multipart/form-data">
          <span><h3>YOU NEED TO REGISTER YOUR FIRST BIKE</h3></span>
          <div class="form-input">
            <div class="col-auto">

            
              <label class="sr-only" for="inlineFormInput">Serial</label>
              <input
                type="text"
                class="form-control mb-2"
                name="serial"
                placeholder="Serial"
                required
              />
            </div>
            <div class="col-auto">
              <label class="sr-only" for="inlineFormInput">Brand</label>
              <input
                type="text"
                class="form-control mb-2"
                name="brand"
                placeholder="Brand"
                required
              />
            </div>
            <div class="col-auto">
              <label class="sr-only" for="inlineFormInput">Color</label>
              <input
                type="text"
                class="form-control mb-2"
                name="color"
                placeholder="Color"
                required
              />
            </div>
            <div class="col-auto">
              <label class="sr-only" for="inlineFormInput">Type</label>
              <input
                type="text"
                class="form-control mb-2"
                name="type"
                placeholder="Type"
                required
              />
            </div>
            <div class="col-auto">
              <label class="sr-only" for="inlineFormInput">Status</label>
              <input
                type="text"
                class="form-control mb-2"
                name="status"
                placeholder="Status"
                required
              />
            </div>
            <div class="col-auto">
              <label class="sr-only" for="inlineFormInput">Lock</label>
              <input
                type="text"
                class="form-control mb-2"
                name="lock"
                placeholder="Lock"
                required
              />
            </div>
            
            <div class="col-auto">

             
            
              <div class="form-group floating-label-form-group controls">
                <input type="file" class="form-control" id="image" name="myImages" accept="image/*" multiple>
             </div>

             <a href="/welcomescreen2"><button type="button" class="btn btn-danger btn-lg" style="background:red;" data-dismiss="modal">Close</button></a>
             <button type="submit" class="btn btn-primary btn-lg">REGISTER</button>
            </form>
          </div>
        </div>
      </div>
    
        
       

      </div>
    </div>
  </div>
  